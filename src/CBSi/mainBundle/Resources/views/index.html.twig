{% extends '::base.html.twig' %}

{# Comments!!! #}

{% block body %}
	{# allows us to add to parent block#}
	{{ parent() }}

	{# block('stylesheets') /includes block#}

	<p>{{- name ~ ' is the best' -}}</p>

	<h1>Hello {{ name }}!</h1>

	<ul>
	    {% for val in vals %}
	    	{% if loop.index is even %}
	        	<li class="even">{{ val }}</li>
	        {% else %}
	        	<li class="odd">{{ val }}</li>
	        {% endif %}
	    {% endfor %}
	</ul>

{% endblock %}

{% block sideBar %}
	<h1>SideBar</h1>
{% endblock %}